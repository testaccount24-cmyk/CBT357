/***  REXX -- REVERSE A RANGE OF SELECTED LINES  ***/
   SAVEMSG = MSG()
   IF SAVEMSG = 'OFF' THEN
      X = MSG("ON")
   X = ADDRESS()
   SUBCOM ISPEXEC
   IF RC <> 0 THEN DO
      SAY 'REVERSE MUST BE RUN UNDER ISPF EDIT!'
      SIGNAL EOJ
   END
   SUBCOM ISREDIT
   UMODE = "ISREDIT"
   ADDRESS ISPEXEC "CONTROL ERRORS RETURN"
   ADDRESS ISREDIT
   "MACRO (PARMS) NOPROCESS"
   IF PARMS = '?' THEN SIGNAL DISPDOC
   "PROCESS RANGE C"
   IF RC > 0 THEN
      DO
         "(TOP) = LINENUM .ZFIRST"
         "(BOT) = LINENUM .ZLAST"
      END
   ELSE
      DO
         "(TOP) = LINENUM .ZFRANGE"
         "(BOT) = LINENUM .ZLRANGE"
      END

   BOTLESS1 = BOT - 1
   DO II = TOP TO BOTLESS1
      "ISREDIT (RECORD) = LINE" II
      "ISREDIT LINE_AFTER &BOT = (RECORD)"
   END
   "ISREDIT DELETE" TOP BOTLESS1

QUIT:
   ADDRESS ISPEXEC
   X=MSG(SAVEMSG)
   ADDRESS ISREDIT "LOCATE" TOP
   ADDRESS ISREDIT "RESET"
   EXIT(0)

DISPDOC:
   ADDRESS TSO "CLEAR"
   SAY "REVERSEX - REVERSE THE SEQUENCE OF EDITED LINES         "
   SAY
   SAY " FORMAT "
   SAY
   SAY "    REVERSEX                                            "
   SAY
   SAY "       WILL CAUSE THE MARKED (VIA C/CC/C##) RANGE OF    "
   SAY "       LINES TO BE REVERSED.  IF NO RANGE IS SPECIFIED, "
   SAY "       THE ENTIRE FILE IS REVERSED.  THIS IS ESSENTIALLY"
   SAY "       A "FLIP" COMMAND FOR THE LINES INVOLVED.         "
   SAY
   SAY
   EXIT(1)

