/**  REXX -- INSERT FILL DATA INTO SPECIFIC COLUMN LOCATION  **/
   RTN = 0
   SAVEMSG = MSG()
   IF SAVEMSG = 'OFF' THEN
      X = MSG("ON")
   X = ADDRESS()
   SUBCOM ISPEXEC
   IF RC <> 0 THEN DO
      SAY 'FILLINS MUST BE RUN UNDER ISPF EDIT!'
      SIGNAL EOJ
   END
   SUBCOM ISREDIT
   IF RC = 0 THEN DO
      UMODE = 'ISREDIT'
      ADDRESS ISPEXEC "CONTROL ERRORS RETURN"
      ADDRESS ISREDIT,
             "ISREDIT MACRO (TOLEFT,CONTENT,LBL1,LBL2)"
      IF RC = 0 THEN DO
         ADDRESS ISREDIT "ISREDIT ("DSN") = DATASET"
      END
   END
   IF DSN = 'DSN' THEN DO
      SAY 'FILLINS EDIT MACRO CAN ONLY BE RUN UNDER ISPF EDIT',
          'WITH NO PENDING EDIT COMMANDS!'
      SIGNAL EOJ
   END

   ERRORMSG = ''
   MESG = ''
   IF FRMLEFT = '' THEN DO
     SIGNAL ERROR
   END
   IF CONTENT = ''  |  TOLEFT = ''  THEN DO
      MESG = 'PARAMETERS ARE MISSING!'
      SIGNAL ERROR
   END
   IF Â¬DATATYPE(TOLEFT,'W')  |  TOLEFT = 0  THEN DO
      MESG = "'"TOLEFT"' VALUE OF TO-LEFT-COL IS INVALID!"
      SIGNAL ERROR
   END
   IF SUBSTR(CONTENT,1,1) = "'",
         & SUBSTR(CONTENT,LENGTH(CONTENT),1) = "'" THEN DO
      CONTENT = SUBSTR(CONTENT,2,LENGTH(CONTENT)-2)
   END
   LEN = LENGTH(CONTENT)
   "ISREDIT ("LRECL") = LRECL "
   IF TOLEFT > LRECL THEN DO
      MESG = "TO-LEFT COLUMN IS GREATER THAN RECORD SIZE ("LRECL")"
      SIGNAL ERROR
   END

   IF LBL1 <> '' THEN DO
      "ISREDIT L &LBL1"
       IF RC <> 0 THEN DO
          MESG = "LABEL" LBL1 "NOT FOUND"
          SIGNAL ERROR
       END
   END

   IF LBL2 <> '' THEN DO
      "ISREDIT L &LBL2"
       IF RC <> 0 THEN DO
          MESG = "LABEL" LBL2 "NOT FOUND"
          SIGNAL ERROR
       END
   END

   "ISREDIT ("LRECL") = LRECL "
   "ISREDIT ("SAVLINE","SAVCOL") = CURSOR     "
   "ISREDIT ("ANUM") = AUTONUM              "
   "ISREDIT (END) = LINENUM .ZLAST"

   IF LBL1 <> '' THEN "ISREDIT (START) = LINENUM &LBL1"
      ELSE START = 1

   IF LBL2 <> '' THEN "ISREDIT (END) = LINENUM &LBL2"
      ELSE LBL2 = LBL1

   IF START > END THEN DO
      FLIP  = START
      START = END
      END   = FLIP
   END

   DO PNTR =  START  TO  END  BY 1
      "ISREDIT (RECORD) = LINE &PNTR"
      RECORD = SUBSTR(RECORD,1,TOLEFT-1),
         || CONTENT,
         || SUBSTR(RECORD,TOLEFT,LRECL-TOLEFT-1)
      "ISREDIT LINE &PNTR = &STR(RECORD)"
   END

   IF LBL1 = '' THEN "ISREDIT LOCATE 1"
      ELSE "ISREDIT LOCATE" LBL1
  "ISREDIT AUTONUM = "ANUM
  SIGNAL EOJ

ERROR:
   IF MESG <> '' THEN DO
      RTN = 20
      ERRORMSG = '===>' MESG
   END
   SIGNAL DISPDOC

EOJ:
   X = MSG(SAVEMSG)
   RETURN RTN

DISPDOC:
   ADDRESS TSO "CLEAR"
   SAY " FILLINS : INSERT A STRING BEFORE A SPECIFIED COLUMN"
   SAY
   SAY ERRORMSG
   SAY
   SAY " FORMAT "
   SAY
   SAY "    FILLINS   LEFT-COL  STRING  .LAB1 .LAB2            "
   SAY
   SAY "       COLUMNS AND STRING ARE MANDATORY. STRING MAY BE "
   SAY "       IN QUOTES OR NOT.  LABEL RANGE IS OPTIONAL.     "
   SAY
   SAY " EXAMPLES "
   SAY
   SAY "    FILLINS  1  '...'                                  "
   SAY "       WILL INSERT ... BEFORE COLUMN 1                 "
   SAY "       SHIFTING EVERYTHING RIGHT 3 COLUMNS             "
   SAY
   SAY "    FILLINS  21  00  .A .B                             "
   SAY "       WILL INSERT 00 AFTER COLUMN 20                  "
   SAY "       SHIFTING COLUMNS 21 ON TO THE                   "
   SAY "       RIGHT IN LABEL RANGE .A THRU .B                 "
   SAY
   RETURN
