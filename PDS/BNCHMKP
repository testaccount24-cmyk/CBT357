//***  PL/I BENCHMARK CODE - SET FOR 10,000,000 LOOP
//***    RUN ONCE WITH NO CODE TO ELIMINATE FRAMEWORK COST
//***
//C          EXEC     PGM=IEL0AA,REGION=4M,
//             PARM=('AG,A,NCT,ESD,F(I),NOFLOW,NIS,NOLIST,M,NMI,NEST',
//             'MAP,OF,OPT(TIME),OP,SZ(MAX),S,STMT,STG,X(F)')
//STEPLIB      DD       DISP=SHR,DSN=-YOUR-PLI-LIB-

 BASE:  PROC OPTIONS(MAIN) REORDER;

        DCL  LOOPCNT   FIXED BIN(31) STATIC INIT(10000000);
        DCL  II        FIXED BIN(31) STATIC;

        DO  II = 1 TO LOOPCNT BY 1;
 /*** CODE TO BE BENCHMARKED GOES HERE... ***/
           END;

        END BASE;

