/**  REXX -- FIND NON BLANKS  **/

   SUBCOM ISPEXEC
   IF RC <> 0 THEN DO
      SAY 'FNB EDIT MACRO CAN ONLY BE RUN UNDER ISPF EDIT!'
      RETURN
   END
   SUBCOM ISREDIT
   IF RC = 0 THEN DO
      ADDRESS ISREDIT "ISREDIT MACRO (COL1 COL2) NOPROCESS"
   END
   ELSE DO
      SAY 'FNB EDIT MACRO CAN ONLY BE RUN UNDER ISPF EDIT!'
      RETURN
   END

   IF SUBSTR(COL1,1,1) = '?' THEN SIGNAL DISPDOC
   IF COL1 = '' THEN COL1 = 73
   "ISREDIT ("LRECL") = LRECL "
   IF COL2 = '' THEN COL2 = LRECL
   "ISREDIT  F  P'Â¬'"   COL1  COL2
   IF RC = 0 THEN EXIT 0
             ELSE EXIT 1

DISPDOC:
   ADDRESS TSO "CLEAR"
   SAY "FNB  -  FIND NON BLANK "
   SAY
   SAY " FORMAT "
   SAY
   SAY "   FNB  ( STARTING-COLUMN  ( ENDING-COLUMN ) )  ( ? )"
   SAY
   SAY "       WILL FIND THE NON BLANK CHARACTER, IF ANY, IN "
   SAY "       COLUMNS 73 ONWARDS (THE DEFAULT) OR FROM THE  "
   SAY "       STARTING-COLUMN THROUGH THE ENDING-COLUMN OR  "
   SAY "       THE FAR MOST RIGHT HAND BYTE. USE THE REPEAT  "
   SAY "       KEY (PF KEY 5 USUALLY) TO CONTINUE.           "
   SAY
   RETURN
