/* REXX -- GET AND DISPLAY LRECL, BLKSIZE AND NUMBER OF RECORDS       */
   ADDRESS ISPEXEC
   "ISREDIT MACRO"
   IF RC = 20 THEN DO
       ZEDSMSG = "NOT A TSO COMMAND"
      "SETMSG MSG(ISRZ000)";EXIT
   END
   ADDRESS ISREDIT "(LREC) = LRECL"
   ADDRESS ISREDIT "(BLKS) = BLKSIZE"
   ADDRESS ISREDIT "(NUM)  = LINENUM .ZLAST"
   LREC=LREC+0;BLKS=BLKS+0;NUM=NUM+0
   ZEDSMSG = LREC"/"BLKS"/"NUM
   "SETMSG MSG(ISRZ000)"
   EXIT(0)
